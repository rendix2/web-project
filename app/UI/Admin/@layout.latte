<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width">
        <title>{ifset title}{include title|stripHtml}{/ifset}</title>

        {block styles}
            <link rel="stylesheet" href="{webpack app.css}">
        {/block}
    </head>

    <body>
        {control menu}

        {control menu:breadcrumbs}

        {snippet flashes}
        <div class="container-fluid">
            {foreach $flashes as $flash}
            <div class="alert alert-{$flash->type} alert-dismissible fade show mt-1" role="alert">{$flash->message}</div>
            {/foreach}
        </div>
        {/snippet}

        <div class="container-fluid">
            {include content}
        </div>

	    {block scripts}
	        <script src="{webpack app.js}" async></script>
        {/block}
    </body>
</html>
